<form method="post" action="{{ path('admin_product_delete', {'slug': product.slug}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.slug) }}">
    <button class="btn btn-outline-danger mt-3">Supprimer</button>
</form>