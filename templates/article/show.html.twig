{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
<div class="container mt-3">
    <h1 class="text-center mb-3">{{ article.title }}</h1>
    <div class="d-flex flex-column justify-content-center">
        <div class="d-flex flex-row mb-3 mt-3 justify-content-center">
            <div class="d-flex flex-column col-4">
                {% for picture in article.pictures %}
                    {% set img = picture.nameOfPicture == null ? "images/pas_dimage.jpg" : picture.passOfPicture ~ picture.nameOfPicture %}
                    <figure class="mb-3">
                        <img src="{{ asset("assets/" ~ img) }}" class="card-img-top" alt="Image illustrant le titre du jeu">
                    </figure>
                {% endfor %}
            </div>
            <div class="d-flex flex-column col-6 order-2">
                <p class="card-text">{{ article.content|raw }}</p>
                <div class="d-flex justify-content-between">
                    <p class="card-text"><small class="text-muted">Post crée le {{ article.publishedAt|date("Y-m-d") }}</small></p>
                    {# <div class="ml-auto">
                        <a href="{{ path("articles") }}" class="btn btn-outline-mer"><small>Retour à la liste</small></a>
                    </div> #}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}